# Server runtime environment (sample)

PORT=3000
NODE_ENV=development
PUBLIC_BASE_URL=http://localhost:3000

# Auth (JWT)
# Use a long random string in production
JWT_SECRET=JWT_SECRET_KEY_CHANGE_ME

# Database (host/local dev)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/workflow_engine

# AWS SDK (SQS)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=AWS_SECRET_ACCESS_KEY

# SQS endpoint (host/local dev)
# On Windows prefer 127.0.0.1 to avoid IPv6 ::1 resolution issues
SQS_ENDPOINT=http://127.0.0.1:4566

# Queues
SQS_REQUEST_QUEUE_NAME=workflow-requests
SQS_REPLY_QUEUE_NAME=workflow-replies

# Worker
WORKER_ENABLED=true
WORKER_POLL_WAIT_SECONDS=10
WORKER_VISIBILITY_TIMEOUT_SECONDS=30
TRIGGER_SYNC_TIMEOUT_MS=15000


